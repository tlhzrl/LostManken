@page
@model LostManken.Pages.Auth.LoginModel
@{
}

<!DOCTYPE html>
<html dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="icon" type="image/png" sizes="16x16" href="~/admin/package/src/assets/images/favicon.png">
    <title>Adminmart Template - The Ultimate Multipurpose admin template</title>

    <link href="~/admin/package/src/dist/css/style.min.css" rel="stylesheet">

    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div class="main-wrapper">

        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>

        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
             style="background-image:url(~/Admin/package/src/assets/images/big/auth-bg.jpg); ">

            @*<img src="~/Admin/package/src/assets/images/big/auth-bg.jpg" />*@
            <div class="auth-box row">
                <div class="col-lg-7 col-md-5 modal-bg-img">
                    <img src="~/Admin/package/src/assets/images/big/3.jpg" style=" width: 447px;height: 500px;" />
                </div>
                <div class="col-lg-5 col-md-7 bg-white">
                    <div class="p-3">
                        <div class="text-center">
                            <img src="~/admin/package/src/assets/images/big/icon.png" alt="wrapkit">
                        </div>
                        <h2 class="mt-3 text-center">Giriş yap</h2>
                        <p class="text-center">Yönetici değilseniz lütfen giriş yapmaya çalışmayınız. <a href="/Index" style="color:darkred;">Ana sayfaya dön.</a></p>
                        
                            <form class="mt-4" method="post">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="text-dark" for="uname">E-Mail</label>
                                            <input class="form-control" id="uname" asp-for="LoginİnputModel.Email" type="text"
                                                   placeholder="Lütfen bir E-Mail giriniz">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="text-dark" for="pwd">Parola</label>
                                            <input class="form-control" id="pwd" type="password" asp-for="LoginİnputModel.Password"
                                                   placeholder="Lütfen bir parola giriniz">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 text-center mt-5">
                                        <label style="display:flex;  justify-content:flex-start; ">
                                            <input asp-for="LoginİnputModel.RememberMe" type="checkbox" style=" -webkit-appearance: checkbox;     margin: -14px; "> <span style="color:black; margin:0px; float:left">Beni Hatırla</span>
                                        </label>
                                    </div>
                                    <div class="col-lg-12 text-center">
                                        <button type="submit" asp-page-handler="Login" class="btn btn-block btn-dark">Giriş yap</button>
                                    </div>

                                </div>
                            </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="~/admin/package/src/assets/libs/jquery/dist/jquery.min.js "></script>

    <script src="~/admin/package/src/assets/libs/popper.js/dist/umd/popper.min.js "></script>
    <script src="~/admin/package/src/assets/libs/bootstrap/dist/js/bootstrap.min.js "></script>

    <script>
        $(".preloader ").fadeOut();
    </script>
</body>

</html>
